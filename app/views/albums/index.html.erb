<h3 class="text-xs-center">Listing Albums</h3>

<%= link_to 'New Album', new_album_path, class: 'btn btn-primary-outline btn-block' %>

<div class="thumbnails container text-xs-center m-t-2 m-b-2">
<% @albums.each do |album| %>
  <div class="span3">
    <%= link_to album_thumbnail(album), album_pictures_path(album) %><br />
    <%= link_to "View Album", album_pictures_path(album), class: 'btn btn-primary btn-block m-t-2' %>
  </div>
<% end %>
</div>

